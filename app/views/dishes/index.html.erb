<section class="container">
  
  <div class="row">
   <div class="container-fluid mt-5 mb-5">
          
          <%= form_tag(dishes_path, method: :get) do %>
            <%= text_field_tag(:search, params[:search],placeholder:"Search dish by name or ingredients",class:"form-control me-2") %>
            <%= submit_tag ("Search") , class:"btn btn-outline-primary" %>
          <% end %>

        </div>
    <% @dishes.each do |dish| %>
        <%= render 'card_index', dish: dish %>
    <% end %>
  </div>
</section>