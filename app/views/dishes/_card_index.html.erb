<div class="card w-100 border-0 overflow-hidden rounded-5 col-lg-3 col-md-6 col-sm-12 col-xs-12">
  <!-- card head -->
  <%= link_to dish_path(dish) do %>
    <div class="position-relative ">
      <img class="img-fluid" src="https://images.unsplash.com/photo-1455619452474-d2be8b1e70cd?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=750&q=80">
      <!-- tags -->
      <div class="card-tag position-absolute bottom-0 p-2">
        <% dish.tags.each do |tag| %>
          <%= link_to tag.label, root_path, class: "btn btn-tag rounded-x btn-secondary" %>
        <% end %>
      </div>
    </div>
  <% end %>
  <!-- card body -->
  <div class="card-body p-2">
      <div class=" d-flex justify-content-between">
        <h6 class="card-title"> <%= dish.name %></h6>
        <p class="card-text"><%= dish.price %>â‚¬</p>
      </div>

      <p class="fs-9"><i class="fas fa-star text-primary"></i> 4.8</p>

      <div class="d-flex justify-content-between align-items-center">
        <% if current_user %>
          <%= link_to "Ajouter au panier", new_user_registration_path, class: "btn btn-primary rounded-x fs-9" %>
        <% else %>
          <%= link_to "Ajouter au panier", new_user_registration_path, class: "btn btn-primary rounded-x fs-9" %>
        <% end %>
      </div>
  </div>
</div>