<section class="container mt-3">
    <div class="row">
        <div class="col-md-6 d-flex">
            <div class="card flex">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="m-2"> 
                            <% if @cook.avatar.attached? %>
                                <%= image_tag @cook.avatar  , alt: "logo cookadom #{@cook.business_name}", class: "rounded-circle",width: 70  %>
                            <% else %>
                                <%= image_tag "logo.svg" , alt: "logo cookadom #{@cook.business_name}", class: "rounded-circle",width: 70  %>
                            <% end %>
                        </div>
                        <div class="px-4" >
                            <h1 class="card-title"><%= @cook.business_name %></h1>
                              <div class=" d-flex justify-content-between">
                                <span class=text-muted> <i class="fas fa-star text-secondary"></i> 4.8</span> 
                                <p class="card-text"><%= @cook.user.city.name %></p>
                              </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <h2>Ses plats</h2>
    </div>

    <% list_tags(@cook).each do |tags| %>
      <span class="btn btn-tag rounded-x btn-secondary"><%= tags %></span>
    <% end %>
    
    <div class="row mt-3">
    <% @cook.dishes.each do |dish| %>
        <div class="card border-0 overflow-hidden rounded-5 col-lg-3 col-md-6 col-sm-12 col-xs-12">
  <!-- card head -->
  <%= link_to dish_path(dish) do %>
    <div class="position-relative ">
      <% if dish.photo.attached? %>
        <%= image_tag dish.photo.variant(resize: "400x300^", crop: '400x300+0+0') , alt: dish.name, class: "rounded-left-5" %>
        <% else %>
        <img class="img-fluid rounded-top " src="https://p8.storage.canalblog.com/83/02/467618/31300273.jpg"> 
      <% end %>
      <!-- tags -->
      <div class="card-tag position-absolute bottom-0 p-2">
        <% dish.tags.each do |tag| %>
          <%= link_to tag.label, root_path, class: "btn btn-tag rounded-x btn-secondary" %>
        <% end %>
      </div>
    </div>
  <% end %>
  <!-- card body -->
  <div class="card-body p-2">
      <div class=" d-flex justify-content-between">
        <h6 class="card-title"> <%= dish.name %></h6>
        <p class="card-text"><%= dish.price %>â‚¬</p>
      </div>

      <p class="fs-9"><i class="fas fa-star text-primary"></i> 4.8</p>

      <div class="d-flex justify-content-between align-items-center">
        <% if current_user %>
          <%= link_to "Ajouter au panier", order_dishes_path(dish_id: dish.id), method: :post, class: "btn btn-primary rounded-x fs-9" %>
        <% else %>
          <%= link_to "Ajouter au panier", new_user_registration_path, class: "btn btn-primary rounded-x fs-9" %>
        <% end %>
      </div>
  </div>
</div>
    <% end %>
</div>   
</section>

