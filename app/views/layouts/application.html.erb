<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>Cookadom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://js.stripe.com/v3/"></script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('logo.svg') %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
</head>

  <body class="body-flx">
    <%= render "layouts/navbar_users" if current_user %>
    <%= render "layouts/navbar" if !current_user %>
    <div id="flash" class="transition-2">
      <%= render "layouts/flash" %>
    </div>
    <%= yield %>
    <%= render "layouts/footer" %>
    <% unless current_user %>
      <script>
          var myNav = document.getElementById("nav");

          window.onscroll = function() {
              "use strict";
              if (document.body.scrollTop >= 58 || document.documentElement.scrollTop >= 58) {
                  myNav.classList.add("shadow");
                  myNav.classList.add("bg-light");
              } else {
                  myNav.classList.remove("bg-light");
                  myNav.classList.remove("shadow");
              }
          };
      </script>
    <% end %>

     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
  
