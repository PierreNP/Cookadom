<!DOCTYPE html>
<html lang="fr">
  <head>
    <%= yield :title_page %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag 'https://js.stripe.com/v3/' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('logo.svg') %>
    <%= content_for :js_script %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
</head>

  <body class="body-flx">
    <%= render "layouts/navbar_users" if current_user && current_user.admin?  %>
    <%= render "layouts/navbar_cook" if current_user && current_user.cook?  %>
    <%= render "layouts/navbar_users" if current_user && current_user.user?  %>
    <%= render "layouts/navbar" if !current_user %>
    <div id="flash" class="transition-2">
      <%= render "layouts/flash" %>
    </div>
    <%= yield %>
    <%= render "layouts/footer" %>
    <% unless current_user %>
      <%= javascript_include_tag 'navbar' %>
    <% end %>
      <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js' %>
  </body>
</html>
