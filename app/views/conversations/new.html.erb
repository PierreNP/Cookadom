<h1> New conversation </h1>

<%= form_tag conversations_path(user_id: params[:user_id]), method: :post do %>

  <div>
    <%= text_field_tag :subject, nil,  placeholder: "Sujet" %>
  </div>

  <div>
    <%= text_field_tag :body , nil,  placeholder: "Votre message ici ..." %>
  </div>

  <%= submit_tag %>
<% end %>
  