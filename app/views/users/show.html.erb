<div class="container">
  <h1 class="text-center pb-3 text-primary"> Vos commandes : </h1>
    <% current_user.carts.each do |cart| %> 
      <% unless cart.status == "pre_validation"%>
      <div class="p-5 mt-3 col-8 offset-2 border border-1 border-primary">
        <h5 class="mb-3 text-center"> Panier du <%= cart.updated_at.to_date %></h5>
         
        <div class="border-bottom border-primary" > 
          <% cart.order_dishes.each do |order| %>
            <% dish = order.dish %>
            <div class="d-flex justify-content-between border-top border-primary" >
              <p class=" p-2 m-0"><%= dish.name %> x <%= order.quantity %></p>
              <p class=" p-2 m-0"><%= dish.price_euro %></p>
            </div>
          <% end %>
        </div>
        <h5 class=" mt-3 text-center">TOTAL : <%= cart.total_price_euro %></h5>
      </div>
      <%end%>
    <% end %>

</div>