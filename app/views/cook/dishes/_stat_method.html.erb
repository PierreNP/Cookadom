<div class="stat-method-block mt-5">
<style>
.chart{
  display:table;
  table-layout: fixed;   
  width:100%;
  max-width:100%;
  height:200px;
  margin:0 auto;
}  
  .chart li{
    position:relative;
    display:table-cell;
    vertical-align:bottom;
    height:100px;
  }
  
 li span{
    margin:0 1em;
    display: block;
  background-color:#fa6400;
    animation: draw 1s ease-in-out;

  }
  
   span:before{
      position:absolute;
      left:0;right:0;top:100%;
      padding:5px 1em 0;
  		display:block;
      text-align:center;
      content:attr(title);
      word-wrap: break-word;
    }
span:hover {
    opacity:0.5;
}

span:hover:before {
    content:attr(order_number);
}
#count{opacity:0}
@keyframes draw{
  0%{height:0;} 
}

</style>
